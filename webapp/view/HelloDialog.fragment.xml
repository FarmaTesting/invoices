<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
    <Dialog id="helloDialog" title="Hello {/recipient/name}">
        <content>
            <core:Icon src="sap-icon://hello-world" size="2rem" class="sapUiResponsiveMargin"></core:Icon>
            <Text text="Texto del cuadro de dialogo"></Text>
        </content>
        <beginButton>
            <Button text="{i18n>helloDialogBut}" press=".onCloseDialog"></Button>
        </beginButton>
    </Dialog>
</core:FragmentDefinition>