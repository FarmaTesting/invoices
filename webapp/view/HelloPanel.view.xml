<mvc:View 
    controllerName="farmanet.invoices.controller.HelloPanel"  
    xmlns="sap.m" 
    xmlns:core="sap.ui.core"
    xmlns:mvc="sap.ui.core.mvc" 
    displayBlock="true">
        <Panel headerText="{i18n>HelloPanel}" class="sapUiResponsiveMargin" width="auto"> 
            <content>
                <Button icon="sap-icon://action" id="_IDGenButton2" text="{i18n>showDialog}" press=".onOpenDialog" class="sapUiSmallMarginEnd"/>
                <Button id="_IDGenButton1" text="{i18n>showHelloButton}" press=".onShowHello" class="sapUiSmallMarginEnd"/>
                <Input id="_IDGenInput1" 
                    value="{/recipient/name}" 
                    width="60%"
                    valueLiveUpdate="true"/>
                <Text text="Hola {recipient/name}" class="sapUiSmallMargin boldElement sapthemeHighlight"></Text>
            </content>
        </Panel>     
        <core:Fragment fragmentName="farmanet.invoices.view.Form01" type="XML"/>
</mvc:View>